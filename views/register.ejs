<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Register</title>
        <link rel="stylesheet" href="/css/form.css" />
    </head>
    <body>
        <div class="form">
            <h1 class="heading">Register</h1>
            <form action="/users/register" method="POST">
                <ul>
                    <% if(typeof errors != 'undefined') { %> <%
                    errors.forEach(error => { %>
                    <li><%= error.message %></li>
                    <% }) %> <% } %>
                </ul>

                <div>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Name"
                        class="email"
                        required
                    />
                </div>
                <div>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Email"
                        class="email"
                        required
                    />
                </div>
                <div>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Password"
                        class="password"
                        required
                    />
                </div>
                <div>
                    <input
                        type="password"
                        id="password2"
                        name="password2"
                        placeholder="Confirm Password"
                        class="password"
                        required
                    />
                </div>
                <div>
                    <input type="submit" value="Register" class="submit-btn" />
                </div>
                <a href="login" class="link">Already Registered? Login here</a>
            </form>
        </div>
    </body>
</html>
